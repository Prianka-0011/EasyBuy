@model IEnumerable<EasyBuy.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
    <form asp-action="Index" method="post">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <input name="srcText" class="form-control" value="@ViewBag.srcText" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <button class="btn btn-outline-danger" type="submit">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size:23px ;color:steelblue">@item.Name</label>
                        </h4>
                    </div>
                    <img src="~/@item.Image" alt="card image" class="card-img-top" style="height:300px;" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <label style="font-size:15px;color:#a51313"><b>Price : @item.Price</b></label>
                                <label style="font-size:15px;color:#a51313"><b>Previous Price : <s>@item.PrevPrice</s></b></label>
                            </div>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-info pull-right">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>