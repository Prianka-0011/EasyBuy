@model EasyBuy.ViewModels.CheckOutVm
@{
    ViewData["Title"] = "CheckOut";
    int i = 1;
    decimal totalPrice = 0;
}

    <form asp-action="Checkout" method="post">
        <div class="border rounded p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="font-weight-normal">Delivary Information</h1>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label class="ml-1" asp-for="FullName"></label>
                                            <input asp-for="FullName" class="form-control ml-1" />
                                            <span asp-validation-for="FullName"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label class="ml-1" asp-for="PhoneNo"></label>
                                            <input asp-for="PhoneNo" class="form-control ml-1" />
                                            <span asp-validation-for="PhoneNo"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label class="ml-1" asp-for="Address"></label>
                                            <input asp-for="Address" class="form-control ml-1" />
                                            <span asp-validation-for="Address"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="font-weight-normal">Order Summery</h1>
                        </div>
                        <div class="table-responsive">
                            @if (ViewBag.CheckOutItem != null)
                            {

                                <table class=" table border-top-0 table-bordered m-3 table-striped font-weight-normal">
                                    <thead style="font-size:12px">
                                        <tr>
                                            <th>#</th>

                                            <th>Category</th>
                                            <th>Product Name</th>
                                            <th>Price</th>
                                            <th>PrevPrice</th>
                                            <th>Quantity</th>

                                            <th>Image</th>

                                        </tr>
                                    </thead>
                                    <tbody style="font-size:11px">
                                        @foreach (var item in ViewBag.CheckOutItem)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.Category</td>
                                                <td>@item.Name</td>
                                                <td>@item.Price</td>
                                                <td><s>@item.PrevPrice</s></td>
                                                <td>@item.Quentity</td>
                                                <td><img src="~/@item.Image" alt="Alternate Text" style="height:50px;width:50px; border-radius:25px" /></td>
                                                <td>
                                                    @if (@item.Quentity == 5)
                                                    {
                                                        <a disabled><i class="fas fa-plus"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="IncCartItem" class="font-weight-bold" asp-route-id="@item.ProductId"><i class="fas fa-plus"></i></a>
                                                    }


                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    </tbody>
                                </table>
                                foreach (var item in ViewBag.CheckOutItem)
                                {

                                    totalPrice = totalPrice + (item.Quentity * item.Price);
                                }

                            }

                        </div>
                        <div class="row mt-4 mb-1 ml-2">
                            <div class="col-md-8">
                                <a class="btn btn-outline-dark" asp-action="Index">Back To List</a>
                                @*<a class="btn btn-outline-info" asp-action="Payment" asp-controller="Homw">Payment</a>*@
                                <span class="pull-right"><b>Total:</b>@totalPrice</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 offset-md-10">
                    <button type="submit" class="btn btn-info" asp-action="Payment" asp-controller="Homw">Payment</button>
                </div>
            </div>
        </div>
    </form>

