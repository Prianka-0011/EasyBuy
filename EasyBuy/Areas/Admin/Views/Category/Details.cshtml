@model EasyBuy.Models.Category
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="border p-4 rounded">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row">
                @*<div class="col-md-3">

                </div>*@
                <div class="col-md-5">
                    <label asp-for="Name"></label>
                    <input readonly="readonly" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-8">
                    <a class="btn btn-info" asp-action="Edit">Edit</a>
                    <a asp-action="Index" class="btn btn-info" type="submit">Back To List</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <img src="~/@Model.Image" style="border-radius: 5px;border: 1px solid #efefef" ; width="150" ;height="150" />
        </div>
    </div>
</div>