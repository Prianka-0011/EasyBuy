
@{
    ViewData["Title"] = "AssignRole";
}

<h1>AssignRole</h1>

<form asp-action="AssignRole" asp-controller="Acc" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <span class=" text-warning font-weight-normal"><b>Create New Role </b></span>
                </div>

                <div class="row">
                    <div class="col-md-10 offset-md-2">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                   
                                        <label class="text-white">User List</label>
                                        <select name="appuser" class="form-control">
                                            <option value="">-- Select User --</option>
                                            @foreach (var item in ViewBag.userlist)
                                            {
                                                <option value="@item.UserName">@item.UserName</option>
                                            }
                                        </select>
                                        <label class="text-white">Role List</label>
                                        <select name="approle" class="form-control">
                                            <option value="">-- Select Role --</option>
                                            @foreach (var item in ViewBag.rolelist)
                                            {
                                                <option value="@item.NormalizedName">@item.NormalizedName</option>
                                            }
                                        </select><br />     
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 offset-md-2 ">
                                <button type="submit" class="btn btn-danger text-center">Assign Role</button>
                                <a asp-action="Index" class="btn btn-warning ml-1">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js">

        $(function(){
            var create = '@TempData["create"]';

            if (create != null) {
                alertify.success(create);
            }

        });
    </script>
}