@model IEnumerable<EasyBuy.Models.Product>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<form asp-action="Index" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="row">

                <div class="col-md-8">
                    <div class="form-group">
                        <input class="form-control" name="srcText" value="@ViewBag.srcText" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button class="btn btn-info" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 pull-right">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <span class=" text-warning font-weight-normal"><b>Manage Product </b></span>
            </div>
            <div class="table-responsive">
                @if (Model != null)
                {

                    <table class=" table border-top-0 table-bordered m-3 table-striped font-weight-normal">
                        <thead style="font-size:12px">
                            <tr>
                                <th>#</th>
                                <th>ProductId</th>
                                <th>Category Name</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>PrevPrice</th>
                                <th>Quantity</th>
                                <th>Description</th>
                                <th>Specification</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody style="font-size:11px">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Id</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.PrevPrice</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Description</td>
                                    <td>@item.Specification</td>
                                    <td><img src="~/@item.Image" alt="Alternate Text" style="height:50px;width:50px; border-radius:25px" /></td>
                                    <td>
                                        @if (item.IsAviable)
                                        {
                                            <b class="text-success">Enable</b>
                                        }
                                        else
                                        {
                                            <b class="text-danger">Disable</b>
                                        }
                                    </td>
                                    <partial name="_ButtonPartial" model="@item.Id" />
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var msg = '@TempData["msg"]';
            if (msg != null) {
               alertify.warning(msg);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");
    }
}