
@model EasyBuy.Models.Product
@{
    ViewData["Title"] = "Delete";
}
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <span class=" text-warning font-weight-normal"><b> Delete Product </b></span>
                </div>
                <div class="row">
                    <div class="col-md-7 ml-2">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label asp-for="Category"></label>
                                    <input readonly="readonly" class="form-control" value="@Model.Category.Name" />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group ">
                                    <label asp-for="Name"></label>
                                    <input readonly="readonly" asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label asp-for="Price"></label>
                                    <input readonly="readonly" asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price"></span>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label asp-for="PrevPrice"></label>
                                    <input readonly="readonly" asp-for="PrevPrice" class="form-control" />
                                    <span asp-validation-for="PrevPrice"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label asp-for="Quantity"></label>
                                    <input readonly="readonly" asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity"></span>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <input readonly="readonly" asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group ">
                                    <label asp-for="Specification"></label>
                                    <input readonly="readonly" asp-for="Specification" class="form-control" />
                                    <span asp-validation-for="Specification"></span>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="IsAviable"></label>
                                <input readonly="readonly" class="form-control" asp-for="IsAviable" />
                                <span asp-validation-for="IsAviable"></span>
                            </div>

                        </div>
                       
                        <div class="form-group row">
                            <div class="col-md-8 offset-md-4 ">
                                <button type="submit" class="btn btn-success ml-1">Delete</button>
                                <a asp-action="Index" class="btn btn-warning ml-1">Back To List</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mt-5">
                        <img src="~/@Model.Image" alt="Alternate Text" style="border-radius: 5px;border: 1px solid #efefef" ; width="300" ;height="300" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js">

        $(function(){
           
           
            var delete1 = '@TempData["delete"]';
          
            if (delete1!= null) {
                alertify.success(delete1);
            }
        });
    </script>
}